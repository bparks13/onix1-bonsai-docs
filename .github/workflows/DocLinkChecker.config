{
  "DocumentationFiles": {
    "src": ".",
    "Files": [
      "**/*.md",
      "*.md"
    ],
    "Exclude": [
      "_site/*"
    ]
  },
  "ResourceFolderNames": [
    "images",
    "workflows"
  ],
  "DocLinkChecker": {
    "RelativeLinkStrategy": "All",
    "CheckForOrphanedResources": false,
    "CleanupOrphanedResources": false,
    "ValidatePipeTableFormatting": true,
    "ValidateExternalLinks": true,
    "ConcurrencyLevel": 5,
    "MaxHttpRedirects": 20,
    "ExternalLinkDurationWarning": 3000,
    "WhitelistUrls": [
      "http://localhost"
    ]
  }
}
